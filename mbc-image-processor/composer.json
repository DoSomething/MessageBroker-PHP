{
  "name": "mbc-image-processor",
  "type": "project",
  "version": "0.1.0",
  "description": "A consumer application for the Message Broker system that consumes entries on the imageProcessingQueue. The application makes calls to Drupal image paths to trigger building of image sizes to populate / cache image sixes. The sizes are based on image style settings in the Drupal applicaiton.",
  "keywords": ["message broker", "Drupal", "image processor"],
  "homepage": "https://github.com/DoSomething/messagebroker-ds-PHP/tree/master/mbc-image-processor",
  "license" : "MIT",
  "authors": [
    {
      "name": "DoSomething and contributors",
      "homepage": "http://www.dosomething.org"
    }
  ],
  "require": {
    "php": ">= 5.3.0",
    "DoSomething/messagebroker-phplib": "0.2.*",
    "dosomething/mb-toolbox": "0.5.*",
    "dosomething/stathat": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.0.*"
  },
  "autoload": {
    "psr-4": {
      "DoSomething\\MBC_Image_Processor\\": "src/"
    }
  },
  "scripts": {
    "pre-install-cmd": [
      "./bin/install.sh"
    ],
    "pre-package-update": [
      "git checkout master",
      "git pull"
    ],
    "post-package-update": [
      "./vendor/bin/phpunit tests"
    ],
    "post-package-uninstall": [
      "./bin/uninstall.sh"
    ]
  }
}
